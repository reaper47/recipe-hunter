{
  "name": "recipya",
  "author": "reaper47",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:mjml",
    "build:css": "tailwind -m -i ../../static/css/tailwind-custom.css --output ../../static/css/tailwind.css",
    "build:mjml": "mjml ../emails/error-admin.mjml -o ../emails/transpiled/error-admin.gohtml --config.minify && mjml ../emails/forgot-password.mjml -o ../emails/transpiled/forgot-password.gohtml --config.minify && mjml ../emails/intro.mjml -o ../emails/transpiled/intro.gohtml --config.minify && mjml ../emails/request-website.mjml -o ../emails/transpiled/request-website.gohtml --config.minify",
    "watch:css": "tailwind -m --output ../../../static/css/tailwind.css -w"
  },
  "license": "MIT",
  "devDependencies": {
    "daisyui": "^4.6.0",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "esbuild": "^0.19.11",
    "mjml": "^4.14.1"
  }
}
